				android:padding="5dp" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="left|center"
					android:text="IP地址"
					android:textSize="13sp" />

				<TextView
					android:id="@+id/ip_tv"
					android:layout_width="fill_parent"
