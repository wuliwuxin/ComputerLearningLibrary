					android:layout_weight="1"
					android:gravity="left|center"
					android:text="DNS2"
					android:textSize="13sp" />

				<TextView
					android:id="@+id/dns2_tv"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:text=""
					android:textSize="13sp" />
